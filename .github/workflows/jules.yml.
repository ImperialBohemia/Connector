name: Jules Automatizace
on:
  issues:
    types: [opened]

jobs:
  jules-job:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout kód
        uses: actions/checkout@v4

      - name: Jules Invoke
        uses: BeksOmega/jules-action@v1.0.0
        with:
          prompt: ${{ github.event.issue.body }}
          # Tady je tvůj klíč vložený přímo pro okamžitou automatizaci
          jules_api_key: AQ.Ab8RN6JddgS3UsyLn8cy6Sv2nkTR8LP7hEUHSGrsX7mET8DXeg
